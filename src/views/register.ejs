<div class="container col-xl-10 col-xxl-8 px-4 py-2">
  <div class="row align-items-center">
    <!-- Bootstrapisiertes Registrierungsformular -->
    <div id="registerSection" class="col-md-10 mx-auto">
      <h1 class="text-center mb-5">Account registrieren</h1>
      <form
        action="/register"
        method="post"
        class="p-4  border rounded-3 bg-dark text-white shadow"
      >
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="radio"
            name="title"
            id="herr"
            value="1"
          />
          <label class="form-check-label" for="herr">Herr</label>
        </div>
        <div class="form-check form-check-inline mb-4">
          <input
            class="form-check-input"
            type="radio"
            name="title"
            id="frau"
            value="2"
          />
          <label class="form-check-label" for="frau">Frau</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control bg-secondary text-white border-0"
            id="vornameInput"
            name="vorna   me"
            placeholder="Vorname"
            required
          />
          <label for="vornameInput">Vorname</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control bg-secondary text-white border-0"
            id="nachnameInput"
            name="nachname"
            placeholder="Nachname"
            required
          />
          <label for="nachnameInput">Nachname</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control bg-secondary text-white border-0"
            id="firmaInput"
            name="firma"
            placeholder="Firma"
          />
          <label for="firmaInput">Firma</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control bg-secondary text-white border-0"
            id="abteilungInput"
            name="abteilung"
            placeholder="Abteilung"
          />
          <label for="abteilungInput">Abteilung</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="email"
            class="form-control bg-secondary text-white border-0"
            id="emailInput"
            name="email"
            placeholder="E-Mail"
            required
          />
          <label for="emailInput">E-Mail</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="password"
            class="form-control bg-secondary text-white border-0"
            id="passwordInput"
            name="passwort"
            placeholder="Passwort"
            required
          />
          <label for="passwordInput">Passwort</label>
        </div>

        <div class="form-floating">
          <input
            type="password"
            class="form-control bg-secondary text-white border-0"
            id="confirmPasswordInput"
            name="passwortConfirm"
            placeholder="Passwort bestätigen"
            required
          />
          <label for="confirmPasswordInput">Passwort bestätigen</label>
        </div>
        <div class="form-check my-3">
          <input
            class="form-check-input"
            type="checkbox"
            id="agbCheckbox"
            value="remember-me"
          />
          <span class="form-check-label">
            Ich stimme den <a href="/AGBs" target="_blank">AGB's</a> zu
          </span>
        </div>

        <div class="d-flex justify-content-between">
          <button type="submit" id="registerSubmit" class="btn btn-primary custom-primary">
            Registrieren
          </button>
          <a href="/login" class="btn btn-outline-light">Zurück zum Login</a>
        </div>
      </form>
    </div>
  </div>
</div>
